@{
    Layout = null;
}

<div class="modal-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Associar hotel a um evento</h5>

                    <div ng-include="'/common/astovetoolsclose'"></div>
                </div>
                <div class="ibox-content">
                    <form role="form" name="hoteisForm" ng-submit="submitForm(hoteisForm.$valid)" novalidate>

                        <input id="antiForgeryToken" data-ng-model="antiForgeryToken" type="hidden" data-ng-init="antiForgeryToken='@AstoveHelper.GetAntiForgeryToken()'" />

                        <div ng-show="hasError || success" class="alert alert-dismissible" ng-class="{ 'alert-danger' : hasError, 'alert-success' : success }" role="alert">
                            <button type="button" class="close" ng-click="showAlert=false;"><span aria-hidden="true">Ã—</span><span class="sr-only">Fechar</span></button>
                            <strong>{{messagetype}}!</strong> {{message}}
                        </div>

                        <div class="col-md-12 form-group" ng-class="{ 'has-error' : hoteisForm.eventooptions.$invalid && !hoteisForm.eventooptions.$pristine }">
                            <label>Evento</label>
                            <select chosen id="evento" class="form-control chosen-select" ng-model="data.modalModel.eventoKV" ng-change="setEventoId()" ng-options="kv as kv.value for kv in data.modalModel.eventoOptions.items track by kv.key" data-placeholder-text-single="'Selecione um(a) Evento'"></select>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-lg pull-right" ng-disabled="hoteisForm.$invalid">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>