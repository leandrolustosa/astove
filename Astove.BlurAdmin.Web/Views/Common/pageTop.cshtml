@{
    Layout = null;
}
<div class="page-top clearfix" scroll-position="scrolled" max-height="50" ng-class="{'scrolled': scrolled}">
  <a href="/" class="al-logo clearfix"><img img="img-responsive center-block" src="~/Images/logo_mini.jpg" alt="YES" /></a>
  <a href class="collapse-menu-link ion-navicon" ba-sidebar-toggle-menu></a>

  <div class="search">
    <i class="ion-ios-search-strong" ng-click="startSearch()"></i>
      <form role="search" class="navbar-form-custom" method="post" action="views/search_results.html">
          <div class="form-group">
              <input ng-auto-complete type="text" placeholder="Procurar por..." class="form-control" name="top-search" id="top-search">
          </div>
      </form>
  </div>

  <div ng-controller="ProfileCtrl" class="user-profile clearfix">
    <div class="al-user-profile" uib-dropdown>
      <a uib-dropdown-toggle class="profile-toggle-link">
        <img ng-src="{{(data.profile.imagemUrl == null || data.profile.imagemUrl == '') ? 'https://placehold.it/75x75' : data.profile.imagemUrl}}" width="75" height="75" />
      </a>
      @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
      {
          @Html.AntiForgeryToken()
      }
      <ul  class="top-dropdown-menu profile-dropdown" uib-dropdown-menu>
        <li><i class="dropdown-arr"></i></li>
        <li><a ng-click="editarPerfil(data.profile.id)"><i class="fa fa-user"></i>Perfil</a></li>
        <li><a href><i class="fa fa-cog"></i>Configura��es</a></li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="signout"><i class="fa fa-power-off"></i>Sair</a></li>
      </ul>
    </div>
    <msg-center></msg-center>
  </div>
</div>