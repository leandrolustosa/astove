@{
    Layout = null;
}

<div class="modal-body" style="z-index:1051">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{title('Ocorreu um erro no servidor')}}</h5>
                    <div ng-include="'/common/astovetoolsclose'"></div>
                </div>
                <div class="ibox-content">
                    
                    <div class="col-md-4 astove-error-content-image">
                        <span class="fa fa-exclamation-triangle fa-5x text-danger"></span>
                    </div>

                    <div class="col-md-8 astove-error-content">
                        <h5>{{message}}</h5>
                        <div ng-if="global.details">
                            <ul class="list-unstyled">
                                <li>{{exception.stackTrace}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>